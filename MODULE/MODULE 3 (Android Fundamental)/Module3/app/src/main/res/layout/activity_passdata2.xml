<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassData2Activity"
    android:background="@drawable/app_background"
    android:padding="@dimen/padding_8">

    <TextView
        android:id="@+id/tv_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/txt_26"
        android:textAlignment="center"
        android:background="@color/white"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="250dp"
        android:padding="@dimen/padding_16" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_passdata2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to back screen click here"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/txt_16"
        android:background="@drawable/btn_whitebg"
        android:padding="@dimen/padding_8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_display"
        android:layout_marginTop="@dimen/margin_60"/>

</RelativeLayout>