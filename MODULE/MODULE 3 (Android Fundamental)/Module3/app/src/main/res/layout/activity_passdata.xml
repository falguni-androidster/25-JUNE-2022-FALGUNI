<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PassDataActivity"
    android:background="@drawable/app_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/passdata_screen"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_20"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10" />

    <EditText
        android:id="@+id/ed_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/white"
        android:padding="@dimen/padding_16"
        android:textColor="@color/purple_700"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_passdata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ed_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_60"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/btn_whitebg"
        android:padding="@dimen/padding_8"
        android:text="passdata click here"
        android:textColor="@color/purple_700"
        android:textSize="@dimen/txt_16" />

</RelativeLayout>