<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:orientation="vertical"
    android:background="@drawable/app_background"
    android:padding="@dimen/padding_24">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registration"
        android:textSize="52sp"
        android:textAlignment="center"
        android:layout_marginTop="@dimen/margin_60"
        android:textStyle="bold"
        android:fontFamily="cursive"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_10">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_firstname"
            android:hint="Enter Firstname"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:inputType="textPersonName"
            android:background="@drawable/btn_whitebg"
            android:padding="@dimen/padding_16"
            android:layout_marginTop="@dimen/margin_20" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_lastname"
            android:hint="Enter Lastname"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_16"
            android:background="@drawable/btn_whitebg"
            android:layout_marginTop="@dimen/margin_10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_username"
            android:hint="Enter Username"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:inputType="textPersonName"
            android:padding="@dimen/padding_16"
            android:background="@drawable/btn_whitebg"
            android:layout_marginTop="@dimen/margin_10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_emailname"
            android:hint="Enter Email"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:inputType="textEmailAddress"
            android:padding="@dimen/padding_16"
            android:background="@drawable/btn_whitebg"
            android:layout_marginTop="@dimen/margin_10" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_pwdname"
            android:hint="Enter Password"
            android:textColor="@color/purple_700"
            android:textColorHint="@color/purple_700"
            android:inputType="textVisiblePassword"
            android:padding="@dimen/padding_16"
            android:maxEms="8"
            android:background="@drawable/btn_whitebg"
            android:layout_marginTop="@dimen/margin_10" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register"
            android:text="register"
            android:textSize="@dimen/txt_16"
            android:background="@drawable/btn_bluebg"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_20" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_cancel"
            android:text="cancel"
            android:textSize="@dimen/txt_16"
            android:background="@drawable/btn_bluebg"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_margin="@dimen/margin_20"/>

    </LinearLayout>

</LinearLayout>