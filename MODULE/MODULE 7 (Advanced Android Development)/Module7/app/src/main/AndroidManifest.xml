<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.UPDATE_DEVICE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_baseline_file_copy_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_file_copy_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.Module7"
        tools:targetApi="31">
        <activity
            android:name=".Wifi.WifiActivity"
            android:exported="false"/>
        <activity
            android:name=".VideoPlayer.VideoActivity"
            android:exported="false"/>
        <activity
            android:name=".TextToSpeech.TTSActivity"
            android:exported="false"/>
        <activity
            android:name=".PlaySongFromServer.ServerPlaySongActivity"
            android:exported="false"/>
        <activity
            android:name=".PlaySongFromResource.ResourcePlaySongActivity"
            android:exported="false"/>
        <activity
            android:name=".PlaySongFromMobileMemory.FilePlaySongActivity"
            android:exported="false"/>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>