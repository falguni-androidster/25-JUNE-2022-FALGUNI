<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/app_background"
    tools:context=".Que3.Que3Activity"
    android:padding="@dimen/padding_24">

    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:text="@string/que3"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/txt_26" />

    <RadioGroup
        android:id="@+id/rg_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_20">

        <RadioButton
            android:id="@+id/rb_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" ADDITION"
            android:textSize="@dimen/txt_20"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rb_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" SUBTRACTION"
            android:textSize="@dimen/txt_20"
            android:textColor="@color/white"/>

        <RadioButton
            android:id="@+id/rb_mul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" MULTIPLICATION"
            android:textSize="@dimen/txt_20"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rb_div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" DIVISION"
            android:textSize="@dimen/txt_20"
            android:textColor="@color/white" />

    </RadioGroup>

    <EditText
        android:id = "@+id/ed_que3_num1"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:hint = "Enter Number 1"
        android:inputType="number"
        android:textSize="@dimen/txt_20"
        android:maxLength="8"
        android:layout_gravity="center_vertical"
        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/margin_20"/>

    <EditText
        android:id="@+id/ed_que3_num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Number 2"
        android:inputType="number"
        android:maxLength="8"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="@dimen/txt_20"
        android:layout_marginTop="@dimen/margin_20"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_que3_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_20"
        android:textSize="@dimen/txt_20"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:background="@drawable/btn_bg_white"/>

    <TextView
        android:id="@+id/tv_que3_show"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="@dimen/txt_26"
        android:layout_marginTop="@dimen/margin_20"/>

</LinearLayout>