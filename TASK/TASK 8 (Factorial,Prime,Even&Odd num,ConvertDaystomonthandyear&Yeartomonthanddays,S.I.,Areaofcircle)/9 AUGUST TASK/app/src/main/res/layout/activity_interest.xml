<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InterestActivity"
    android:orientation="vertical"
    android:background="@drawable/background_color">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/simple_interest"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/txt_32"
        android:textAlignment="center"
        android:layout_margin="@dimen/margin_20" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_16">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Principal Amount"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/ed_amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_26"
                    android:background="@color/white"
                    android:textColor="@color/teal_700"
                    android:inputType="number"
                    android:padding="2dp"
                    android:layout_margin="@dimen/margin_20"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Rate of Interest"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/ed_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_26"
                    android:background="@color/white"
                    android:textColor="@color/teal_700"
                    android:inputType="number"
                    android:padding="2dp"
                    android:layout_margin="@dimen/margin_20"
                    android:layout_gravity="center"
                    android:layout_weight="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time in Years"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/ed_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txt_26"
                    android:background="@color/white"
                    android:textColor="@color/teal_700"
                    android:inputType="number"
                    android:padding="2dp"
                    android:layout_margin="@dimen/margin_20"
                    android:layout_gravity="center"
                    android:layout_weight="2"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_simple_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple Interest"
                android:textColor="@color/teal_200"
                android:textStyle="bold"
                android:textSize="@dimen/txt_16"
                android:background="@drawable/button_color"
                android:layout_margin="@dimen/margin_20"
                android:padding="@dimen/padding_16" />

            <TextView
                android:id="@+id/tv_display_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/txt_32"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="40dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>